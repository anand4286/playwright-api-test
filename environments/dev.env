# Development Environment Configuration
NODE_ENV=development
BASE_URL=https://jsonplaceholder.typicode.com
API_VERSION=v1

# Authentication - Development
JWT_SECRET=dev-jwt-secret-2024
API_KEY=dev-api-key-12345
BEARER_TOKEN=dev-bearer-token-abcdef

# Database Configuration - Development
DB_HOST=dev-db.example.com
DB_PORT=3306
DB_NAME=dev_api_test_db
DB_USER=dev_api_user
DB_PASSWORD=dev_secure_password_123

# Test Configuration - Development
TIMEOUT=30000
RETRIES=3
PARALLEL_WORKERS=4
TEST_USER_EMAIL=testuser@dev.example.com
TEST_USER_PASSWORD=DevPassword123!

# Feature Flags - Development
ENABLE_NEW_FEATURES=true
ENABLE_DEBUG_MODE=true
ENABLE_VERBOSE_LOGGING=true

# HTTP Logging Configuration - Development
ENABLE_FULL_LOGS=true
ENABLE_CONSOLE_LOGGING=true
LOG_HEADERS=true
LOG_REQUEST_BODY=true
LOG_RESPONSE_BODY=true
MAX_LOG_BODY_SIZE=50000

# Service URLs - Development
AUTH_SERVICE_URL=https://auth-dev.example.com
USER_SERVICE_URL=https://users-dev.example.com
NOTIFICATION_SERVICE_URL=https://notifications-dev.example.com

# Rate Limiting - Development (More lenient)
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=100

# Logging Configuration - Development
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/dev-test-execution.log
ENABLE_CONSOLE_LOGGING=true

# Dashboard Configuration - Development
DASHBOARD_PORT=3001
ENABLE_REAL_TIME_UPDATES=true
DASHBOARD_AUTH_REQUIRED=false

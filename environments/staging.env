# Staging Environment Configuration
NODE_ENV=staging
BASE_URL=https://staging-api.example.com
API_VERSION=v1

# Authentication - Staging
JWT_SECRET=staging-jwt-secret-2024-secure
API_KEY=staging-api-key-67890
BEARER_TOKEN=staging-bearer-token-xyz789

# Database Configuration - Staging
DB_HOST=staging-db.example.com
DB_PORT=3306
DB_NAME=staging_api_test_db
DB_USER=staging_api_user
DB_PASSWORD=staging_secure_password_456

# Test Configuration - Staging
TIMEOUT=45000
RETRIES=2
PARALLEL_WORKERS=2
TEST_USER_EMAIL=testuser@staging.example.com
TEST_USER_PASSWORD=StagingPassword456!

# Feature Flags - Staging
ENABLE_NEW_FEATURES=true
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false

# HTTP Logging Configuration - Staging
ENABLE_FULL_LOGS=false
ENABLE_CONSOLE_LOGGING=true
LOG_HEADERS=true
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false
MAX_LOG_BODY_SIZE=10000

# Service URLs - Staging
AUTH_SERVICE_URL=https://auth-staging.example.com
USER_SERVICE_URL=https://users-staging.example.com
NOTIFICATION_SERVICE_URL=https://notifications-staging.example.com

# Rate Limiting - Staging (Moderate)
RATE_LIMIT_REQUESTS_PER_MINUTE=500
RATE_LIMIT_BURST_SIZE=50

# Logging Configuration - Staging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/staging-test-execution.log
ENABLE_CONSOLE_LOGGING=true

# Dashboard Configuration - Staging
DASHBOARD_PORT=3002
ENABLE_REAL_TIME_UPDATES=true
DASHBOARD_AUTH_REQUIRED=true

# Performance Thresholds - Staging
MAX_RESPONSE_TIME_MS=2000
MAX_MEMORY_USAGE_MB=512
MIN_SUCCESS_RATE_PERCENT=95

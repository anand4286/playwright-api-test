# QA Environment Configuration
NODE_ENV=qa
BASE_URL=https://qa-api.example.com
API_VERSION=v1

# Authentication - QA
JWT_SECRET=qa-jwt-secret-2024-testing
API_KEY=qa-api-key-testing-99999
BEARER_TOKEN=qa-bearer-token-test-validation

# Database Configuration - QA
DB_HOST=qa-db.example.com
DB_PORT=3306
DB_NAME=qa_api_test_db
DB_USER=qa_test_user
DB_PASSWORD=qa_test_password_999

# Test Configuration - QA (Extended Testing)
TIMEOUT=90000
RETRIES=5
PARALLEL_WORKERS=6
TEST_USER_EMAIL=testuser@qa.example.com
TEST_USER_PASSWORD=QAPassword999!

# Feature Flags - QA (All enabled for testing)
ENABLE_NEW_FEATURES=true
ENABLE_DEBUG_MODE=true
ENABLE_VERBOSE_LOGGING=true
ENABLE_EXPERIMENTAL_FEATURES=true

# HTTP Logging Configuration - QA
ENABLE_FULL_LOGS=true
ENABLE_CONSOLE_LOGGING=true
LOG_HEADERS=true
LOG_REQUEST_BODY=true
LOG_RESPONSE_BODY=true
MAX_LOG_BODY_SIZE=100000

# Service URLs - QA
AUTH_SERVICE_URL=https://auth-qa.example.com
USER_SERVICE_URL=https://users-qa.example.com
NOTIFICATION_SERVICE_URL=https://notifications-qa.example.com

# Rate Limiting - QA (Relaxed for testing)
RATE_LIMIT_REQUESTS_PER_MINUTE=2000
RATE_LIMIT_BURST_SIZE=200

# Logging Configuration - QA
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/qa-test-execution.log
ENABLE_CONSOLE_LOGGING=true

# Dashboard Configuration - QA
DASHBOARD_PORT=3004
ENABLE_REAL_TIME_UPDATES=true
DASHBOARD_AUTH_REQUIRED=false

# Performance Thresholds - QA (Relaxed for testing)
MAX_RESPONSE_TIME_MS=5000
MAX_MEMORY_USAGE_MB=1024
MIN_SUCCESS_RATE_PERCENT=90

# Test Data Configuration - QA
ENABLE_TEST_DATA_GENERATION=true
AUTO_CLEANUP_TEST_DATA=true
MAX_TEST_USERS=1000

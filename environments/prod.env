# Production Environment Configuration
NODE_ENV=production
BASE_URL=https://api.example.com
API_VERSION=v1

# Authentication - Production
JWT_SECRET=prod-jwt-secret-2024-ultra-secure
API_KEY=prod-api-key-production-123456
BEARER_TOKEN=prod-bearer-token-secure-abc789xyz

# Database Configuration - Production
DB_HOST=prod-db-cluster.example.com
DB_PORT=3306
DB_NAME=production_api_db
DB_USER=prod_readonly_user
DB_PASSWORD=prod_ultra_secure_password_789

# Test Configuration - Production (Conservative)
TIMEOUT=60000
RETRIES=1
PARALLEL_WORKERS=1
TEST_USER_EMAIL=testuser@production.example.com
TEST_USER_PASSWORD=ProductionPassword789!

# Feature Flags - Production
ENABLE_NEW_FEATURES=false
ENABLE_DEBUG_MODE=false
ENABLE_VERBOSE_LOGGING=false

# HTTP Logging Configuration - Production
ENABLE_FULL_LOGS=false
ENABLE_CONSOLE_LOGGING=false
LOG_HEADERS=false
LOG_REQUEST_BODY=false
LOG_RESPONSE_BODY=false
MAX_LOG_BODY_SIZE=1000

# Service URLs - Production
AUTH_SERVICE_URL=https://auth.example.com
USER_SERVICE_URL=https://users.example.com
NOTIFICATION_SERVICE_URL=https://notifications.example.com

# Rate Limiting - Production (Strict)
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=10

# Logging Configuration - Production
LOG_LEVEL=warn
LOG_FILE_PATH=./logs/prod-test-execution.log
ENABLE_CONSOLE_LOGGING=false

# Dashboard Configuration - Production
DASHBOARD_PORT=3003
ENABLE_REAL_TIME_UPDATES=false
DASHBOARD_AUTH_REQUIRED=true

# Performance Thresholds - Production (Strict)
MAX_RESPONSE_TIME_MS=1000
MAX_MEMORY_USAGE_MB=256
MIN_SUCCESS_RATE_PERCENT=99

# Security Configuration - Production
ENABLE_SSL_VERIFICATION=true
REQUIRE_API_KEY_HEADER=true
ENABLE_REQUEST_SIGNING=true
